<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sp_color"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/slideshow"
        android:orientation="vertical" >

        <com.zeal.peak.obejects.RecyclingImageView
            android:id="@+id/sp_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:layout_weight="8"
            android:scaleType="fitXY" />

        <!-- <ImageView -->
        <!-- android:id="@+id/sp_strip" -->
        <!-- android:layout_width="fill_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_marginLeft="15dp" -->
        <!-- android:layout_marginRight="15dp" -->
        <!-- android:layout_marginTop="10dp" -->
        <!-- android:src="@drawable/strip" /> -->

        <TextView
            android:id="@+id/sp_profile"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight=".2"
            android:gravity="center"
            android:text="TextView" />

        <LinearLayout
            android:id="@+id/sp_linh"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight=".5"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/ll_clk_hrts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/sp_imageHeart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:src="@drawable/heart" />

                <TextView
                    android:id="@+id/sp_hearts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sp_ll_like_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/sp_imageLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/thumb" />

                <TextView
                    android:id="@+id/sp_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llvsp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/Sp_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/slideshowarrow" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>