<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_btn_bg" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/ff_ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/lbl_find_friends_link_accounts"
            android:textColor="#958378"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RelativeLayout1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/ff_btnAddressBookmatching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_btn_bg"
            android:padding="15dp"
            android:text="Address Book Matching"
            android:textColor="@color/font_white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/ff_btnFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_btn_bg"
            android:padding="15dp"
            android:text="Facebook"
            android:textColor="@color/font_white"
            android:textSize="25sp" />

        <!-- <Button -->
        <!-- android:id="@+id/ff_btnSkype" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:background="@drawable/setting_btn_bg" -->
        <!-- android:text="Skype" -->
        <!-- android:textColor="@color/font_white" -->
        <!-- android:textSize="25sp" /> -->


        <!-- <Button -->
        <!-- android:id="@+id/ff_btnQq" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:background="@drawable/setting_btn_bg" -->
        <!-- android:text="QQ" -->
        <!-- android:textColor="@color/font_white" -->
        <!-- android:textSize="25sp" /> -->
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentswitcherframe"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8" >
    </FrameLayout>

</RelativeLayout>