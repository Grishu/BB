<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <FrameLayout
        android:id="@+id/ll_flFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ll_ivprofImage"
            android:layout_width="52dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/maskicon" />
    </FrameLayout>

    <TextView
        android:id="@+id/ll_tvDistance"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/ll_flFrame"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_lookbg"
        android:ellipsize="middle"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ll_tvProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/ll_tvDistance"
        android:layout_toRightOf="@+id/ll_flFrame"
        android:ellipsize="marquee"
        android:ems="12"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:singleLine="true"
        android:text="ProfileName"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ll_tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_tvProfileName"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/ll_flFrame"
        android:layout_toLeftOf="@+id/ll_tvDistance"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:singleLine="true"
        />

</RelativeLayout>
